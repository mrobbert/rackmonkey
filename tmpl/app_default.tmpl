<TMPL_IF NAME=apps>
<table>
	<tr>
		<th>
			<a class="sort" title="Sort by name" href="<TMPL_VAR NAME=base_url>?view=app&amp;order_by=app.name">Application</a> 
		</th>
		<th>
			<a class="sort" title="Sort by description" href="<TMPL_VAR NAME=base_url>?view=app&amp;order_by=app.descript">Description</a> 
		</th>	
	</tr><TMPL_LOOP NAME=apps>
	<tr>
		<td><a title="View details for this application" href="<TMPL_VAR NAME=base_url>?view=app&amp;view_type=single&amp;id=<TMPL_VAR NAME=id>"><TMPL_VAR ESCAPE=HTML NAME=name></a></td>
		<td><TMPL_IF NAME=descript_short><span title="<TMPL_VAR ESCAPE=HTML NAME=descript>"><TMPL_VAR ESCAPE=HTML NAME=descript_short></span><TMPL_ELSE><TMPL_IF NAME=descript><TMPL_VAR ESCAPE=HTML NAME=descript><TMPL_ELSE>-</TMPL_IF></TMPL_IF></td>
	</tr>
	</TMPL_LOOP>
</table>
</TMPL_IF>

