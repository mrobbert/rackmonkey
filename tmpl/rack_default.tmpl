<head>
	<title>Racks | RackMonkey</title>
	<style type="text/css" media="screen">
		@import "<TMPL_VAR NAME=web_root>/styles/main.css";
		@import "<TMPL_VAR NAME=web_root>/styles/tabs.css";
		@import "<TMPL_VAR NAME=web_root>/styles/itemtable.css";
	</style>
	<script type="text/javascript" src="<TMPL_VAR NAME=web_root>/javascript/racklib.js"></script>
</head>

<body>

<TMPL_INCLUDE NAME="nav-rack.ssi">

<div id="main">
<form id="device_options" method="get" action="<TMPL_VAR NAME=base_url>">
	<p>
		<button style="margin-right: 20px" title="Create a new device" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=rack&amp;view_type=create'; return false;">New Rack</button>

		<TMPL_IF NAME=rack2xls_url><button title="Export the device table to an Excel spreadsheet" onclick="window.location = '<TMPL_VAR NAME=rack2xls_url>?view=rack&amp;view_type=xls_export&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>'; return false;">Export XLS</button></TMPL_IF>
		<TMPL_IF NAME=rack2pdf_url><button title="Export the device table to a PDF document" onclick="window.location = '<TMPL_VAR NAME=rack2pdf_url>?view=rack&amp;view_type=pdf_export&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>'; return false;">Export PDF</button></TMPL_IF>
	</p>
</form>	

<form id="racks"  method="get" action="<TMPL_VAR NAME=base_url>">
<table class="itemtable">
	<tr>
		<th><a onclick="checkboxInvert(document.getElementById('racks'));">&#10003;</a></th>
		<th>
			<a title="Sort by name" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=rack.name">Rack</a> 
		</th>
		<th><span>Layout</span></th>
		<th>
			<a title="Sort by row" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=row.name">Row</a> 
		</th>			
		<th>
			<a title="Sort by room" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=room.name">Room</a> 
		</th>
		<th>
			<a title="Sort by size" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=rack.size">Size (U)</a> 
		</th>
		<th>
			<a title="Sort by size" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=free_space">Free (U)</a> 
		</th>		
		<th>
			<a title="Sort by size" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=device_count">Devices</a> 
		</th>					
		<th>
			<a title="Sort by notes" href="<TMPL_VAR NAME=base_url>?view=rack&amp;order_by=rack.notes">Notes</a> 
		</th>
	</tr>
	<TMPL_IF NAME=racks><TMPL_LOOP NAME=racks>
	<TMPL_IF NAME="__odd__"><tr class="odd"><TMPL_ELSE><tr class="even"></TMPL_IF>
		<td><input type="checkbox" name="rack_list" value="<TMPL_VAR ESCAPE=HTML NAME=id>" /></td>
		<td><a title="View details for this rack" href="<TMPL_VAR NAME=base_url>?view=rack&amp;view_type=single&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>"><TMPL_VAR ESCAPE=HTML NAME=name></a></td>
		<td><a title="View device layout within this rack" href="<TMPL_VAR NAME=base_url>?view=rack&amp;view_type=physical&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>">&gt;&gt;</a></td>
		<td><TMPL_UNLESS NAME=row_hidden><TMPL_VAR ESCAPE=HTML NAME=row_name> [<TMPL_VAR ESCAPE=HTML NAME=row_pos>]<TMPL_ELSE>N/A</TMPL_UNLESS></td>
		<td><TMPL_VAR ESCAPE=HTML NAME=room_name> in <TMPL_IF NAME=building_name_short><TMPL_VAR ESCAPE=HTML NAME=building_name_short><TMPL_ELSE><TMPL_VAR ESCAPE=HTML NAME=building_name></TMPL_IF></td>
		<td><TMPL_VAR ESCAPE=HTML NAME=size></td>
		<td><TMPL_VAR ESCAPE=HTML NAME=free_space></td>
		<td><TMPL_VAR ESCAPE=HTML NAME=device_count></td>
		<td><TMPL_IF NAME=notes_short><span title="<TMPL_VAR ESCAPE=HTML NAME=notes>"><TMPL_VAR ESCAPE=HTML NAME=notes_short></span><TMPL_ELSE><TMPL_IF NAME=notes><TMPL_VAR ESCAPE=HTML NAME=notes><TMPL_ELSE>-</TMPL_IF></TMPL_IF></td>
	</tr></TMPL_LOOP></TMPL_IF>
		<tr>
		<td colspan="9" class="footer">
			Showing <TMPL_VAR ESCAPE=HTML NAME=listed_rack_count> of <TMPL_VAR ESCAPE=HTML NAME=total_rack_count> rack
		</td>
	</tr>
</table>
<p>
<input type="hidden" name="view" value="rack" />
<input type="hidden" name="view_type" value="physical" />
<button title="View the device layout of the selected racks" type="submit">Device Layout</button>
</p>
</form>
</div>

<TMPL_INCLUDE NAME="footer.ssi">

</body>
</html>
