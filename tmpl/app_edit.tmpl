<head>
	<title><TMPL_VAR ESCAPE=HTML NAME=name> | RackMonkey</title>
	<style type="text/css" media="screen">
	@import "<TMPL_VAR NAME=web_root>/styles/main.css";
	@import "<TMPL_VAR NAME=web_root>/styles/tabs.css";
	@import "<TMPL_VAR NAME=web_root>/styles/form.css";
	</style>
	<script type="text/javascript" src="<TMPL_VAR NAME=web_root>/javascript/racklib.js"></script>
</head>
<body>
	<TMPL_INCLUDE NAME="nav-app.ssi">
	<div id="main">
		<form  method="post" action="<TMPL_VAR NAME=base_url>">
			<table class="form">
				<tr>
					<th class="form">Edit App</th>
				</tr>
				<tr>
					<td>
						<TMPL_INCLUDE NAME="app-edit.ssi">
					</td>
				</tr>
				<tr>
					<td class="footer">
						<button style="float: left" title="Cancel editing this app" onclick="window.location = '<TMPL_VAR NAME=base_url>?view=app&amp;view_type=single&amp;id=<TMPL_VAR ESCAPE=URL NAME=id>'; return false;">Cancel</button>
						<button style="float: right" title="Save this app" type="submit">Save</button>	
						<input type="hidden" name="view" value="app" />
						<input type="hidden" name="view_type" value="single" />
						<input type="hidden" name="id" value="<TMPL_VAR ESCAPE=HTML NAME=id>" />
						<input type="hidden" name="act" value="update" />
						<input type="hidden" name="act_on" value="app" />
						<input type="hidden" name="act_id" value="<TMPL_VAR ESCAPE=HTML NAME=id>" />	
						&nbsp;
					</td>
				</tr>
			</table>
		</form>
	</div>
	<TMPL_INCLUDE NAME="footer.ssi">
</body>
